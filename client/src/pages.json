{

  "easycom": {
		"autoscan": true,
    "custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/discover/discover",
      "style": {
        "navigationBarTitleText": "动态"
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
      }
    },
    {
      "path": "pages/publish/publish",
      "style": {
        "navigationBarTitleText": "发布",
        "animationType": "slide-in-right",
        "animationDuration": 500,
        "navigationStyle":"custom"

      }
    },
    {
      "path": "pages/message/message",
      "style": {
        "navigationBarTitleText": "消息"
      }
    },
    {
      "path": "pages/unknown/unknown",
      "style": {
        "navigationBarTitleText": "404"
      }
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#ec7436",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/message/message",
        "iconPath": "static/tabbar-icons/discover.png",
        "selectedIconPath": "static/tabbar-icons/discover_fill.png",
        "text": "消息"
      },
      {
        "pagePath": "pages/discover/discover",
        "iconPath": "static/tabbar-icons/discover.png",
        "selectedIconPath": "static/tabbar-icons/discover_fill.png",
        "text": "发现"
      },
      {
        "pagePath": "pages/mine/mine",
        "iconPath": "static/tabbar-icons/my.png",
        "selectedIconPath": "static/tabbar-icons/my_fill.png",
        "text": "个人中心"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "Uniapp社区",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "bounce": "none"
  }
}
